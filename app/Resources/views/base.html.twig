{% trans_default_domain "layout" %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
    	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <title>{% block title %}{{ 'layout.pagetitle' | trans }}{% endblock %}</title>
        {% include 'layout/stylesheets.html.twig' %}
        {% include 'layout/javascripts.html.twig' %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="wide">
	

	<!-- WRAPPER -->
	<div class="wrapper">

		{% include 'layout/header.html.twig' %}
    
		{% block header %}		
		<!-- PAGE TITLE -->
		{% if app.request.get('_route') == 'homepage' %}
		<section id="page-title" class="page-title-parallax page-title-center text-light" style="background-image:url({{ asset('images/wiki-wiki/header.jpg') }});">
		{% else %}
		<section id="page-title" class="background-dark text-light">
		{% endif %}
			<div class="container">
				<div class="page-title col-md-8">
					<h1>{% block pagetitle %}{{ 'layout.pagetitle' | trans }}{% endblock %}</h1>
					<span>{% block subtitle %}{{ 'layout.subtitle' | trans }}{% endblock %}</span>
				</div>
				<div class="breadcrumb col-md-4">
					<ul>
						<li><a href="#"><i class="fa fa-home"></i></a></li>
						<li><a href="#">{{ 'layout.breadcrumb.home' | trans }}</a></li>
						{% block breadcrumps %}
							{#<li><a href="#">Test</a></li>
							<li class="active"><a href="#">Footer with Menu links!</a></li>#}
						{% endblock %}
					</ul>
				</div>
			</div>
		</section>
		<!-- END: PAGE TITLE -->
		{% endblock %}

		{% block body %}
		{% endblock %}

		{% include 'layout/footer.html.twig' %}

				<!-- GO TOP BUTTON -->
		<a class="gototop gototop-button" href="#"><i class="fa fa-chevron-up"></i></a>
		<script type="text/javascript" src="{{ asset('js/theme-functions.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/custom.js') }}"></script>
    </body>
</html>
